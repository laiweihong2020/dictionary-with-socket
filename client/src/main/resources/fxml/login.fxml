<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.65">
    <GridPane alignment="center" hgap="10" vgap="10">
    <padding><Insets top="25" right="25" bottom="10" left="25" /></padding>
    
    <Text text="Welcome" fx:id="informationText"
        GridPane.columnIndex="0" GridPane.rowIndex="0"
        GridPane.columnSpan="2"/>
    
    <Label text="Ip Address"
        GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField fx:id="ipAddrInput"
        GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Port"
        GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <TextField fx:id="portInput"
        GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    
    <Button text="Connect" onAction="#checkConnection"
        GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    </GridPane>
</VBox>